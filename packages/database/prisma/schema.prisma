generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  image         String?
  companyId     String?
  company       Company?  @relation(fields: [companyId], references: [id])
  referralCode  String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  campaigns     Campaign[]
  referralsSent Referral[] @relation("Referrer")
  referralsReceived Referral[] @relation("Referee")
  rewards       Reward[]
  
  @@map("users")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  website     String?
  logo        String?
  stripeAccountId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  users       User[]
  campaigns   Campaign[]
  
  @@map("companies")
}

model Campaign {
  id              String   @id @default(uuid())
  name            String
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id])
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Reward settings
  rewardType      RewardType @default(CASH)
  rewardAmount    Decimal  @db.Decimal(10, 2)
  rewardCurrency  String   @default("USD")
  minPayout       Decimal  @default(10.00) @db.Decimal(10, 2)
  
  // Campaign settings
  active          Boolean  @default(true)
  widgetConfig    Json?    // { position, colors, logo }
  
  // Tracking
  totalClicks     Int      @default(0)
  totalSignups    Int      @default(0)
  totalConversions Int     @default(0)
  totalRewardsPaid Decimal @default(0.00) @db.Decimal(10, 2)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  referrals       Referral[]
  
  @@map("campaigns")
}

model Referral {
  id              String   @id @default(uuid())
  campaignId      String
  campaign        Campaign @relation(fields: [campaignId], references: [id])
  
  referrerId      String
  referrer        User     @relation("Referrer", fields: [referrerId], references: [id])
  
  refereeEmail    String?
  refereeId       String?
  referee         User?    @relation("Referee", fields: [refereeId], references: [id])
  
  // Tracking
  referralCode    String
  utmSource       String?
  utmMedium       String?
  utmCampaign     String?
  ipAddress       String?
  userAgent       String?
  
  // Status
  status          ReferralStatus @default(CLICKED)
  clickedAt       DateTime @default(now())
  signedUpAt      DateTime?
  convertedAt     DateTime?
  
  // Reward
  rewardAmount    Decimal? @db.Decimal(10, 2)
  rewardStatus    RewardStatus @default(PENDING)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([referrerId, refereeEmail])
  @@map("referrals")
}

model Reward {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  amount          Decimal  @db.Decimal(10, 2)
  currency        String   @default("USD")
  
  // Payout
  status          RewardStatus @default(PENDING)
  payoutMethod    PayoutMethod?
  payoutEmail     String?
  stripeTransferId String?
  paidAt          DateTime?
  
  // Metadata
  description     String?
  referralId      String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("rewards")
}

// Enums
enum RewardType {
  CASH
  CREDIT
  DISCOUNT
}

enum ReferralStatus {
  CLICKED
  SIGNED_UP
  CONVERTED
  EXPIRED
}

enum RewardStatus {
  PENDING
  APPROVED
  PAID
  REJECTED
}

enum PayoutMethod {
  STRIPE
  PAYPAL
  BANK_TRANSFER
}
